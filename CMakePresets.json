{
  "version": 10,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "description": "Default build using Ninja generator",
      "generator": "Ninja",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "C:/Qt/6.8.2/mingw_64;",
        "CMAKE_CXX_COMPILER": "C:\\Qt\\Tools\\mingw1310_64\\bin\\g++.exe",
        "CMAKE_MAKE_PROGRAM": "C:\\Qt\\Tools\\Ninja\\ninja.exe"
      },
      "environment": {
        "PATH": "C:\\Qt\\6.8.2\\mingw_64\\bin;$penv{PATH}"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },

    {
      "name": "linux-base",
      "description": "Default build using Ninja generator",
      "generator": "Ninja",
      "hidden": true,
      "environment": {
        "PATH": "$penv{PATH}"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },

    {
      "name": "windows-debug",
      "inherits": "windows-base",
      "binaryDir": "${sourceDir}/build/windows-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "QA_BUILD_TESTS": "ON",
        "QA_BUILD_UI": "ON"
      }
    },

    {
      "name": "windows-release",
      "inherits": "windows-base",
      "binaryDir": "${sourceDir}/build/windows-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "linux-debug",
      "inherits": "linux-base",
      "binaryDir": "${sourceDir}/build/linux-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "QA_BUILD_TESTS": "ON",
        "QA_BUILD_UI": "ON"
      }
    }
  ]
}
